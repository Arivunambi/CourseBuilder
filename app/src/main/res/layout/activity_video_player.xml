<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#000000"
    tools:context="com.arivunambi.coursebuilder.VideoPlayer">

    <!--android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/content_video_player"
            android:id="@+id/article_videoContent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Rotate the device for full screen mode / click back button to exit"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/article_videoContent"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
