            android:name=".QuizContent"
            android:label="@string/title_activity_quiz_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateQuestion"
            android:label="@string/title_activity_create_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateActivity"
            android:label="@string/title_activity_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SignupUser" />
        <activity android:name=".DocViewer"
            android:label="DocViewer"
            android:theme="@style/AppTheme.SubActivity"/>
        <activity
            android:name=".LoadingScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ScoreReport"
            android:label="Score Card"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>